@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.ContentPage>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "Main.cshtml";
	var quoteColor = Model.Value<string>("heroOverlayColor");
}


@Html.Partial("Hero Header")



@if(!string.IsNullOrEmpty(quoteColor)){

    <style>
        .quote-card {
          background-color: #@quoteColor;
          color: #ffffff;
          box-shadow: 0 1px 2px rgba(34, 34, 34, 0.12), 0 2px 4px rgba(34, 34, 34, 0.24);
        }
        
        input.btn{
            background-color: #@quoteColor!important;
            border-color: #@quoteColor!important;
        }
        
        fieldset.umbraco-forms-fieldset{
            background-color: #@quoteColor!important;
        }
        
        a, a:active{
            color: #@quoteColor;
        }
        
        a:hover{
            color: #@quoteColor;
            font-weight: 600;
        }
        
        hr{
            background-color: #@quoteColor;
        }
    </style>
}

@Html.GetGridHtml(Model, "contentGrid")